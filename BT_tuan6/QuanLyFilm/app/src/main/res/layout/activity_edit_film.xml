<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutEdit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditFilmActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/film">

    <TextView
        android:id="@+id/textviewTieuDeEdit"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Edit Film"
        android:background="#2196F3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/imageviewEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/edittextEditTenTA"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="Tên film"
            android:backgroundTint="#712DEB"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"></LinearLayout>
        <EditText
            android:id="@+id/edittextEditTenTV"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Nữ siêu nhân"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:gravity="bottom"
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:background="#2196F3"
                android:textSize="25sp"
                android:text="Score"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RatingBar
                    android:stepSize="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:progressTint="@color/colorYellow"
                    android:id="@+id/ratingbar_danhgiaUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/backgroundEditButton"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2196F3">
        <Button
            android:id="@+id/buttonEditOk"
            android:background="#F44336"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:text="Ok"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonEditCancel"
            android:layout_marginLeft="7dp"
            android:background="#F44336"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:text="Cancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>