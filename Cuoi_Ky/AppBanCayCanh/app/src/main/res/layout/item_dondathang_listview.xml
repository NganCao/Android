<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#F0F0EB"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/icon_avatar"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:gravity="center"
            android:id="@+id/textviewMaDDH"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:text="Mã DDH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textColor="#F44336"
            android:id="@+id/textviewTenKH"
            android:paddingLeft="5dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:text="Tên khách hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textviewSdtKH"
            android:paddingLeft="15dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:text="Sdt khách hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textviewEmailKH"
            android:paddingLeft="15dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:text="Email khách hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textviewDiachiKH"
            android:paddingLeft="15dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:text="Địa chỉ khách hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>